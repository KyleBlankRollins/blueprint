{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Decorators */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "source/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}