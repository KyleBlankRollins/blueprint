{
  "name": "blueprint",
  "version": "0.1.0",
  "description": "A highly portable and customizable component library built on Lit",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "scaffold": "tsc source/scripts/scaffoldComponent.ts --module es2020 --moduleResolution bundler --outDir .scripts && node .scripts/scaffoldComponent.js",
    "validate:component": "tsc source/scripts/validateComponent.ts --module es2020 --moduleResolution bundler --outDir .scripts && node .scripts/validateComponent.js",
    "validate:tokens": "tsc source/scripts/validateTokens.ts --module es2020 --moduleResolution bundler --outDir .scripts && node .scripts/validateTokens.js",
    "extract-api": "tsc source/scripts/extractAPI.ts --module es2020 --moduleResolution bundler --outDir .scripts && node .scripts/extractAPI.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint source --ext .ts,.tsx",
    "lint:fix": "eslint source --ext .ts,.tsx --fix",
    "format": "prettier --write source/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check source/**/*.{ts,tsx,css,md}",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "components",
    "ui"
  ],
  "author": "Kyle Rollins",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "storybook": "^10.1.11",
    "@storybook/web-components-vite": "^10.1.11",
    "eslint-plugin-storybook": "^10.1.11"
  },
  "dependencies": {
    "lit": "^3.3.2"
  }
}
