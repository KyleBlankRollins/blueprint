{
  "name": "blueprint",
  "version": "0.1.0",
  "description": "A highly portable and customizable component library built on Lit",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bp": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:cli": "tsc -p tsconfig.cli.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:cli": "vitest source/cli",
    "test:themes": "vitest source/themes",
    "test:themes:run": "vitest run source/themes",
    "lint": "eslint source --ext .ts,.tsx",
    "lint:fix": "eslint source --ext .ts,.tsx --fix",
    "format": "prettier --write source/**/*.{ts,tsx,css,md}",
    "format:check": "prettier --check source/**/*.{ts,tsx,css,md}",
    "theme:generate": "npm run build:cli && node dist/cli/commands/generate-theme.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "components",
    "ui"
  ],
  "author": "Kyle Rollins",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@storybook/web-components-vite": "^10.1.11",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/ui": "^4.0.16",
    "commander": "^14.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^10.1.11",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "storybook": "^10.1.11",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@types/culori": "^4.0.1",
    "culori": "^4.0.2",
    "lit": "^3.3.2"
  }
}
