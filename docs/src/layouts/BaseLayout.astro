---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'A highly portable and customizable component library built on Lit',
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Blueprint</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <slot />

    <!-- Load Blueprint components -->
    <script>
      import '../../../source/index.ts';

      // Theme handling
      const savedTheme = localStorage.getItem('blueprint-theme');
      const prefersDark = window.matchMedia(
        '(prefers-color-scheme: dark)'
      ).matches;
      const initialTheme = savedTheme || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', initialTheme);

      // Listen for theme changes
      window.addEventListener('theme-change', ((event: CustomEvent) => {
        const theme = event.detail.theme;
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('blueprint-theme', theme);
      }) as EventListener);
    </script>
  </body>
</html>

<style is:global>
  /* Reset and base styles */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--bp-font-family-base, system-ui, sans-serif);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    min-height: 100vh;
    background: var(--bp-color-background);
    color: var(--bp-color-text);
  }

  /* Ensure links are styled properly */
  a {
    color: inherit;
    text-decoration: none;
  }

  /* Code blocks */
  pre {
    padding: 1rem;
    border-radius: var(--bp-border-radius-md, 0.375rem);
    overflow-x: auto;
    font-family: var(--bp-font-family-mono, monospace);
    font-size: 0.875rem;
    line-height: 1.7;
  }

  code {
    font-family: var(--bp-font-family-mono, monospace);
  }

  /* Inline code */
  :not(pre) > code {
    background: var(--bp-color-surface-secondary, #f1f5f9);
    padding: 0.125rem 0.375rem;
    border-radius: var(--bp-border-radius-sm, 0.25rem);
    font-size: 0.875em;
  }

  [data-theme='dark'] :not(pre) > code {
    background: var(--bp-color-surface-secondary, #334155);
  }
</style>
